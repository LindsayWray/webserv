server {
	listen 8080;

	server_name www.localhost;

	index   /index.html;

	error_page 404 error404.html 403 error403.html;

	client_max_body_size 100;

	location / {
		autoindex on;
		root    /var/www/html;
	}

	location /images/ {
		root	/var/www/html/resources;
		autoindex on;
	}

	location /time {
		root	/var/cgi-bin;
		cgi_param /ret_time.py;
	}

	location /toupper {
    	root	/var/cgi-bin;
    	cgi_param /toupper.py;
    }

    location /false {
        root	/var/cgi-bin;
        cgi_param /false.py;
    }

	location /images/limited/ {
		root /var/www/html/resources;
		limit_method POST;
	}
		
}

server {
    listen          80;
    server_name     localhost;

    return 302 http://localhost:8080$uri;
}

server {
    listen          8100;
    server_name     banaan.org;

    location / {
        	root    /var/www/other;
        	autoindex on;
        }
}

server {
    listen 8100;
    server_name     webserv.com;


    location / {
		autoindex off;
    	root    /var/www/html;
    }
}

